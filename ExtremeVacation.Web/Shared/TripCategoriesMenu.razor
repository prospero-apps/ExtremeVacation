@inherits TripCategoriesMenuBase

@if(TripCategoryDtos == null && ErrorMessage == null)
{
    <LoadingSpinner/>
}
else if(ErrorMessage != null)
{
    <ErrorDisplay ErrorMessage="@ErrorMessage"/>
}
else
{
    @foreach(var tripCategory in TripCategoryDtos)
    {
        var link = "/TripsByCategory/" + tripCategory.Id;
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@link">
                <span class="@tripCategory.IconCSS"></span>&nbsp;@tripCategory.Name
            </NavLink>
        </div>
    }
}